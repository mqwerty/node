{
  "name": "@mqwerty/node",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Skeleton for NodeJS projects",
  "keywords": [],
  "author": {
    "name": "Dmitrii Elkin",
    "email": "de@mqwerty.ru"
  },
  "main": "src/index.ts",
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "postinstall": "husky install",
    "start": "npm run build && node --enable-source-maps build/index.js",
    "dev": "nodemon",
    "build": "rm -rf build && tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "cover": "jest --coverage",
    "pretty": "prettier --write \"**/*.{js,ts,json,yml}\"",
    "lint": "eslint --fix \"**/*.ts\""
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ],
    "*.{js,json,yml}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ext": "json,js,ts",
    "exec": "node --inspect --trace-warnings -r ts-node/register -- ./src/index.ts"
  }
}
