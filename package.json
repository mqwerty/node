{
  "name": "@mqwerty/node",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Skeleton for NodeJS projects",
  "keywords": [],
  "author": {
    "name": "Dmitrii Elkin",
    "email": "de@mqwerty.ru"
  },
  "main": "src/index.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "npm run build && node build/index.js",
    "dev": "nodemon",
    "build": "rm -rf build && tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest --detectOpenHandles",
    "pretty": "prettier --write **/*.{js,ts,json}",
    "lint": "eslint --fix **/*.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ],
    "*.{js,json}": [
      "eslint"
    ]
  },
  "nodemonConfig": {
    "exec": "node --trace-warnings -r ts-node/register -- ./src/index.ts"
  }
}
