{
  "name": "@mqwerty/node",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Skeleton for NodeJS projects",
  "keywords": [],
  "author": {
    "name": "Dmitrii Elkin",
    "email": "de@mqwerty.ru"
  },
  "main": "src/index.ts",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "npm run build && node build/index.js",
    "dev": "nodemon",
    "build": "rm -rf build && tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "pretty": "prettier --write **/*.{js,ts,json}",
    "lint": "eslint --fix **/*.ts"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ],
    "*.{js,json}": [
      "eslint"
    ]
  },
  "nodemonConfig": {
    "ext": "json,js,ts",
    "exec": "node --inspect --trace-warnings -r ts-node/register -- ./src/index.ts"
  }
}
